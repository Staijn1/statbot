{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2020",
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020",
      "esnext.asynciterable"
    ],
    "moduleResolution": "node",
    "outDir": "./build"
  },
  "exclude": [
    "node_modules",
    "./src/assets/data/mocks/*.json"
  ],
  "include": [
    "./src/app/**/*.ts",
    "./test/**/*.ts",
    "./src/assets/**/*.json"
  ],
  "indent": [
    true,
    "spaces",
    2
  ]
}
